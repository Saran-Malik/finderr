<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2dd"
    tools:context=".FormFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:src="@drawable/cloouds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_find_trip"
                android:layout_width="334dp"
                android:layout_height="45dp"

                android:layout_marginTop="32dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/open_sans"
                android:letterSpacing=".05"
                android:text="Find Trip"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_weather2">

            </androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:id="@+id/letsTravel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:fontFamily="@font/opensanscondbold"
                android:lineHeight="26sp"
                android:text="LET'S TRAVEL"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textFontWeight="800"
                android:textSize="36sp"
                android:textStyle="bold"
                app:flow_verticalAlign="top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:fontFamily="@font/open_sans"
                android:lineHeight="26sp"
                android:text="Budget"
                android:textAlignment="textStart"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:flow_verticalAlign="top"
                app:layout_constraintStart_toStartOf="@+id/user_budget"
                app:layout_constraintTop_toBottomOf="@+id/letsTravel" />

            <TextView
                android:id="@+id/weather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans"
                android:lineHeight="26sp"
                android:text="Preferred Weather"
                android:textAlignment="textStart"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:flow_verticalAlign="top"
                app:layout_constraintStart_toStartOf="@+id/user_budget"
                app:layout_constraintTop_toBottomOf="@+id/user_budget" />

            <TextView
                android:id="@+id/enviroment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans"
                android:lineHeight="26sp"
                android:text="Preffered Environment"
                android:textAlignment="textStart"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:flow_verticalAlign="top"
                app:layout_constraintStart_toStartOf="@+id/user_budget"
                app:layout_constraintTop_toBottomOf="@+id/user_weather" />

            <EditText
                android:id="@+id/user_budget"
                android:layout_width="347dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textfield"
                android:drawableRight="@drawable/ic_baseline_currency_pound_24"
                android:drawableTint="#b1b9b4"

                android:hint="7500"
                android:inputType="number"
                android:paddingStart="20dp"

                android:paddingRight="10dp"
                android:textColor="#372E1E"
                android:textColorHint="#B1B9B4"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/budget"
                tools:ignore="RtlSymmetry">


            </EditText>

            <EditText
                android:id="@+id/user_weather"
                android:layout_width="347dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textfield"

                android:drawableTint="#b1b9b4"
                android:hint="Sunny"


                android:paddingStart="20dp"
                android:paddingRight="10dp"
                android:textColor="#372E1E"
                android:textColorHint="#B1B9B4"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weather"
                tools:ignore="RtlSymmetry">


            </EditText>

            <EditText
                android:id="@+id/user_weather2"
                android:layout_width="347dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"

                android:background="@drawable/textfield"
                android:drawableTint="#b1b9b4"
                android:hint="Beach"


                android:paddingStart="20dp"
                android:paddingRight="10dp"
                android:textColor="#372E1E"
                android:textColorHint="#B1B9B4"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enviroment"
                tools:ignore="RtlSymmetry">


            </EditText>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>